import { Lang } from '../i18n/consts'
---

<!DOCTYPE html>
<html lang="{Lang}">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
            <article>
                <slot />
            <article>
		</main>
		<Footer />
	</body>
</html>
